<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".historic" >

    <Button
        android:id="@+id/btnreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="return to restaurant list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="131dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="69dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/addreview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="tell us your opinion on the app"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnajoutavis"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="Add your opinion" />
    </LinearLayout>

    <TextView
        android:id="@+id/textavis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnreturn"
        tools:text="chere the review" />

</androidx.constraintlayout.widget.ConstraintLayout>